<h1>Listing all articles</h1>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th colspan="3">Actions</th>
        </tr>
    </thead>

    <tbody>
        <% @articles.each do |a| %>
            <tr>
                <td><%= a.title %></td>
                <td><%= a.description %></td>
                <td><%= link_to 'Show', article_path(a) %></td>
                <td><%= link_to 'Edit', edit_article_path(a) %></td>
                <td><%= link_to 'Delete', article_path(a), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %></td>
            </tr>
        <% end %>
    </tbody>
</table>

<%= link_to 'Create article', new_article_path %>
